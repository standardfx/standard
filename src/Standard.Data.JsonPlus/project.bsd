#include cslib,net462,netstandard1_3
assemblyDescription = 'A superset of the popular JSON format. JsonPlus is designed for ease of editing and is capable of variable substitution.'
#assemblyAlias
#comGuid
clsCompliant = true
allowPartialTrust = true

frameworks {
	net462 {
		compiler {
			configuration {
				Release {
					strongNameKey = ${strongNameKey.testsign}
				}
			}
		}
	}
	'netstandard1.3' {
		disableDefaultDependencyPackages = true
	}
}

internalsVisibleTo {
	'Standard.Data.JsonPlus.Tests' {
		'DEBUG' = null
		'!DEBUG,NETFX' = 'PublicKey='${frameworks.net462.compiler.configuration.Release.strongNameKey.hash}
		'!DEBUG,!NETFX' = null
	}
}

package {
	output {
		nuget {
			tags = ["standard", "data", "json", "superset", "extension"]
			summary = ${assemblyDescription}
		}
	}
}

